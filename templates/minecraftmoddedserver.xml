<?xml version="1.0"?>
<Container version="2">
  <Name>minecraftmoddedserver</Name>
  <Repository>c4artz/minecraftmoddedserver</Repository>
  <Registry>https://hub.docker.com/r/c4artz/minecraftmoddedserver/</Registry>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <Support>https://github.com/C4ArtZ/ModdedMinecraftServer/issues</Support>
  <Project>https://github.com/C4ArtZ/ModdedMinecraftServer</Project>
  <Overview>A simple container that allows you to have a modded Minecraft server on Unraid. </Overview>
  <Category>GameServers:</Category>
  <Icon>https://raw.githubusercontent.com/C4ArtZ/Unraid-Templates/master/templates/icons/moddedminecraftserver.png</Icon>
  <Description>A simple container that allows you to have a modded Minecraft server on Unraid. </Description>
  <Config Name="Appdata" Target="/serverdata/serverfiles" Default="/mnt/user/appdata/minecraftmoddedserver" Mode="rw" Description="Serverfiles location. SSD recommended!" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/minecraftmoddedserver</Config>
  <Config Name="Extra game parameters" Target="GAME_PARAMETERS" Default="" Mode="" Description="leave blank if not needed!" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Extra JVM parameters" Target="EXTRA_JVM_PARAMETERS" Default="" Mode="" Description="Leave blank if not needed!" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="XMS" Target="XMS" Default="1" Mode="" Description="Initial memory heap size in GB. Recommended to be equal to XMX." Type="Variable" Display="always" Required="true" Mask="false">1</Config>
  <Config Name="XMX" Target="XMX" Default="2" Mode="" Description="Maximum memory heap size in GB. Lower values might reduce performance due to garbage collection." Type="Variable" Display="always" Required="true" Mask="false">2</Config>
  <Config Name="Game Port" Target="25565" Default="" Mode="tcp" Description="Container Port: 25565" Type="Port" Display="always" Required="true" Mask="false">25565</Config>
  <Config Name="RCON Port" Target="25575" Default="" Mode="tcp" Description="Container Port: 25575" Type="Port" Display="always" Required="false" Mask="false">25575</Config>
  <Config Name="Modloader" Target="MODLOADER" Default="forge" Mode="" Description="Choose between 'forge' and 'fabric'." Type="Variable" Display="always" Required="true" Mask="false">forge</Config>
  <Config Name="Accept EULA" Target="ACCEPT_EULA" Default="false" Mode="" Description="Set to 'true' if you accept the EULA https://account.mojang.com/documents/minecraft_eula" Type="Variable" Display="always" Required="true" Mask="false">false</Config>
  <Config Name="UID" Target="UID" Default="" Mode="" Description="Container Variable: UID" Type="Variable" Display="advanced-hide" Required="true" Mask="false">99</Config>
  <Config Name="UMASK" Target="UMASK" Default="" Mode="" Description="Container Variable: UMASK" Type="Variable" Display="advanced-hide" Required="false" Mask="false">000</Config>
  <Config Name="GID" Target="GID" Default="" Mode="" Description="Container Variable: GID" Type="Variable" Display="advanced-hide" Required="true" Mask="false">100</Config>
</Container>
